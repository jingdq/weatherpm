<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_repeat"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_cal_today"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/smsItemPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/user_icon_default"
            android:contentDescription="@string/imgContentDesc"
            android:focusable="false" />

        <LinearLayout
            android:id="@+id/smsItemNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/smsItemName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="@string/smsItemNameStr"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biz_main_tab_divider"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/addaddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_btn"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:text="@string/region"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biz_main_tab_divider"
        android:focusable="false"
        android:focusableInTouchMode="false" />


    <ListView
        android:id="@+id/menuaddresslist"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:choiceMode="singleChoice"
        android:divider="@drawable/biz_main_tab_divider"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:headerDividersEnabled="true" >
    </ListView>

    
    <Button
        android:id="@+id/bg_setting_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/settingbg"
        android:background="@drawable/add_btn"
        android:textColor="@color/white"
        android:textSize="18sp" />
    
    <Button
        android:id="@+id/developer_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/developer"
        android:background="@drawable/add_btn"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>